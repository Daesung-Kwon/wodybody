{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build",
                "installCommand": "npm ci --legacy-peer-deps",
                "buildCommand": "NODE_OPTIONS='--max-old-space-size=4096' GENERATE_SOURCEMAP=false ESLINT_NO_DEV_ERRORS=true npm run build"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "env": {
        "REACT_APP_API_URL": "https://wodybody-production.up.railway.app"
    },
    "git": {
        "deploymentEnabled": {
            "frontend": true,
            "main": false,
            "backend": false,
            "develop": false,
            "gh-pages": false
        },
        "ignoreCommand": "bash -c '[[ \"$VERCEL_GIT_COMMIT_REF\" == \"gh-pages\" ]] && exit 1 || exit 0'"
    }
}