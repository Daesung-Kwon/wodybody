{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build",
                "installCommand": "npm ci --legacy-peer-deps",
                "buildCommand": "NODE_OPTIONS='--max-old-space-size=8192' npm run build"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "env": {
        "REACT_APP_API_URL": "https://wodybody-production.up.railway.app"
    }
}